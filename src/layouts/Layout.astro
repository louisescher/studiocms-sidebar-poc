---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A page testing how the double-sidebar concept for StudioCMS could work." />

		<meta property="og:title" content={title} />
		<meta property="og:description" content="A page testing how the double-sidebar concept for StudioCMS could work." />
		<meta name="theme-color" content="#aa87f4" />

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/studiocms-sidebar-poc/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Onest';
		src: url('/studiocms-sidebar-poc/fonts/Onest.ttf') format('truetype-variations');
		font-weight: 200 900;
		font-style: normal;
		font-display: swap;
	}

	:root {
		--background: #101010;
		--background-step-1: #151515;
		--background-step-2: #191919;
		--background-step-3: #242424;
		--text: #ffffff;
		--text-muted: #8A8A8A;
		--text-inverted: #000000;
		--border: #29292d;
		--primary: #AA87F4;
		--primary-hover: #a07cee;
		--primary-focus: #956fe9;
	}

	:root.light {
		--background: #ebebeb;
		--background-step-1: #dcdcdc;
		--background-step-2: #d0d0d0;
		--background-step-3: #bcbcbc;
		--text: #000000;
		--text-muted: #3e3e3e;
		--text-inverted: #ffffff;
		--border: #adaab2;
		--primary: #7c45f0;
		--primary-hover: #8350f1;
		--primary-focus: #8c5bf7;
	}

	* {
		font-family: 'Onest';
	}

	html {
		background: var(--background);
		box-sizing: border-box;
		color: var(--text);
	}
	
	html, body {
		margin: 0;
		padding: 0;
	}

	.tp-dfwv {
		width: 300px !important;
	}
</style>
